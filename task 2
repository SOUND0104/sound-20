#QUESTION 1
def count_vowels(input_string):
    vowels = "aeiouAEIOU"
    vowel_counts = {'A': 0, 'E': 0, 'I': 0, 'O': 0, 'U': 0}
    total_vowels = 0
    input_string = input_string.lower()
    for char in input_string:
        if char in vowels:
            total_vowels += 1
            if char == 'a':
                vowel_counts['A'] += 1
            elif char == 'e':
                vowel_counts['E'] += 1
            elif char == 'i':
                vowel_counts['I'] += 1
            elif char == 'o':
                vowel_counts['O'] += 1
            elif char == 'u':
                vowel_counts['U'] += 1
    print("Vowel Counts:")
    for vowel in "AEIOU":
        print(f"{vowel}: {vowel_counts[vowel]}")
        print(f"\nTotal number of vowels: {total_vowels}")
input_string = "Guvi Geeks Network Private Limited"
count_vowels(input_string)


#QUESTION 2
num = 1
rows = 6
for i in range(1, rows + 1):
    print(" " * (rows - i), end=" ")
    for j in range(i):
        if num <= 20:
            print(num, end=" ")
            num += 1
print()


#QUESTION 3

def remove_vowels(input_string):
    vowels = "aeiouAEIOU"
    result = ''.join([char for char in input_string if char not in vowels])
    return result
input_string = input("Enter a string: ")
output_string = remove_vowels(input_string)
print("String without vowels:", output_string)

#QUESTION 4

def count_unique_characters(input_string):
    unique_chars = set(input_string)

    return len(unique_chars)


input_string = input("Enter a string: ")
unique_count = count_unique_characters(input_string)
print("Number of unique characters:", unique_count)

#QUESTION 5
def is_palindrome(s):

    s = s.replace(" ", "").lower()
    return s == s[::-1]


input_string = input("Enter a string: ")
if is_palindrome(input_string):
    print("True")
else:
    print("False")

#QUESTION 9

def count_words(input_string):
    words = input_string.split()
    return len(words)
input_string = input("Enter a string: ")
print("Number of words:", count_words(input_string))


